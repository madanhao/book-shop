/* pages/profile/profile.wxss */
page{
  background-color: #F8F8F8;
}
.header{
  width: 100%;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.header .user-pic{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.header .user-pic image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}
.header .signin{
  width: 150rpx;
  height: 50rpx;
  background-color: rgba(00, 00, 00, 0.2);
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.header .signin image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}
.sign-card{
  display: flex;
  height: 100rpx;
  align-items: center;
  background-color: white;
  padding: 0 30rpx;
  font-size: 29rpx;
}
.sign-card view{
  background-color: #C5A666;
  width: 120rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
.sign-card text{
  flex: 1;
}
.integral{
  display: flex;
  height: 160rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 20rpx;
}
.integral>view{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.integral>view>text:last-child{
  margin-top: 20rpx;
  font-size: 29rpx;
  color: gray;
}
.order{
  background-color: white;
  margin: 0 20rpx;
  border-radius: 20rpx;
}
.order .title{
  display: flex;
  height: 100rpx;
  margin: 0 30rpx;
  align-items: center;
  border-bottom: 1px solid lightgray;
}
.order .title text:first-child{
  font-weight: bold;
  flex: 1;
}
.order .title text:last-child{
  width: 230rpx;
}
.order .content{
  display: flex;
  font-size: 27rpx;
  padding: 50rpx 0;
}
.order .content>view{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.order .content image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}
.bottom-card{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin: 20rpx;
  border-radius: 20rpx;
}
.bottom-card .item{
  display: flex;
  width: 90%;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid lightgray;
}
.bottom-card .item:last-child{
  border-bottom: none;
}
.bottom-card .item image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 30rpx;
}
.bottom-card .item view:first-of-type{
  flex: 1;
}
.bottom-card .item text:last-of-type{
  width: 50rpx;
}
.logo{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.logo image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.logo text{
  font-size: 29rpx;
  color: lightgray;
  margin-bottom: 30rpx;
}









