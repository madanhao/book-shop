<!--pages/profile/profile.wxml-->

<view>
  <!-- 用户头像卡片 -->
  <view class="header" style="background: url('/assets/profile-bgc.png') no-repeat;">
    <view class="user-pic">
      <image src="/assets/logo.png"></image>
      <text>点击登录</text>
    </view>
    <view class="signin">
      <image src="/assets/icons/signin.png"></image>
      <text>签到</text>
    </view>
  </view>
  <!-- 登录 -->
  <view class="sign-card">
    <text>登陆手机号，同步全渠道订单和优惠券</text>
    <view>登录</view>
  </view>
  <!-- 积分、卡、劵码部分 -->
  <view class="integral">
    <view bindtap="toIntegral" class="item01">
      <text>0</text>
      <text>积分</text>
    </view>
    <view class="item02">
      <text>0</text>
      <text>卡</text>
    </view>
    <view class="item03">
      <text>0</text>
      <text>劵码</text>
    </view>
  </view>
  <!-- 我的订单 -->
  <view class="order">
    <view class="title">
      <text>我的订单</text>
      <text>查看全部订单 ></text>
    </view>
    <view class="content">
      <view>
        <image src="/assets/icons/pay.png"></image>
        <text>待付款</text>
      </view>
      <view>
        <image src="/assets/icons/send.png"></image>
        <text>待发货</text>
      </view>
      <view>
        <image src="/assets/icons/receive.png"></image>
        <text>待收货</text>
      </view>
      <view>
        <image src="/assets/icons/evaluate.png"></image>
        <text>待评价</text>
      </view>
      <view>
        <image src="/assets/icons/refund.png"></image>
        <text>退款维权</text>
      </view>
    </view>
  </view>
  <!-- 下部卡片一（任务中心、购物车、返现、课程） -->
  <view class="bottom-card">
    <view class="item">
      <image src="/assets/icons/task.png"></image>
      <view>任务中心</view>
      <text>></text>
    </view>
    <view class="item">
      <image src="/assets/icons/cart.png"></image>
      <view>购物车</view>
      <text>></text>
    </view>
    <view class="item">
      <image src="/assets/icons/refund.png"></image>
      <view>返现</view>
      <text>></text>
    </view>
    <view class="item">
      <image src="/assets/icons/course.png"></image>
      <view>课程</view>
      <text>></text>
    </view>
  </view>
  <!-- 下部卡片二（收货地址、个人信息、账号设置） -->
  <view class="bottom-card">
    <view class="item">
      <image src="/assets/icons/address.png"></image>
      <view>收货地址</view>
      <text>></text>
    </view>
    <view class="item">
      <image src="/assets/icons/profile.png"></image>
      <view>个人信息</view>
      <text>></text>
    </view>
    <view class="item">
      <image src="/assets/icons/settings.png"></image>
      <view>账号设置</view>
      <text>></text>
    </view>
  </view>
  <view class="logo">
    <image src="/assets/logo.png"></image>
    <text>保护伞公司提供技术支持</text>
  </view>
    

</view>
