
<swiper class="sliders" autoplay interval="2000" circular>
  <swiper-item wx:for="{{swiperImg}}" wx:key="{{index}}">
    <image src="{{item.imgSrc}}"/>
  </swiper-item>
</swiper>
<view wx:for="{{clothingList}}" wx:key="{{index}}" class="shop-item">
  <image src="{{item.imgUrl}}" mode="aspectFit"></image>
  <view class="shop-bottom">
    <text>￥{{item.price}}</text>
    <text>{{item.sold}}件已售</text>
    <image src="/assets/icons/cart.png"></image>
  </view>
</view>
