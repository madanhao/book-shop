/* pages/book-list/book-list.wxss */
page{
  background-color: #F8F8F8;
}
.scroll-view{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
}
.shop-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 330rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: white;
  margin-bottom: 30rpx;
}
.shop-item:nth-child(odd){
  margin-right: 30rpx;
}
.shop-item>image{
  height: 350rpx;
}
.shop-item>view:first-of-type{
  margin: 20rpx 0;
}
.shop-item .price{
  display: flex;
  align-items: center;
  width: 100%;
 }
.shop-item .price text{
  flex: 1;
 }
.shop-item .price image{
  height: 40rpx;
  width: 40rpx;
 }

 .navbar{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  background-color: white;
}
.navbar view{
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 29rpx;
}
